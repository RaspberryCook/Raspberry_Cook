<h1>users#index</h1>

<ul class="users">
<% @users.each do |user| %>
	<li>
		<%= render 'shared/user' , :user => user %>

		<% if current_user.admin?%>
			<%= link_to 'supprimer' , user, 
				:method => :delete, 
				:confirm => 'Are you sure?' ,
				:title => "Delete #{user.nom}" %>
		<% end %>

	</li>
<% end %>
</ul>
