<section>

	<h1 style="display: none"><%= @user.username %></h1>

	<figure class="user_avatar">
		<%= image_tag gravatar_url( @user.email, 300) , :class => 'big_gravatar_profile' %>
		<figcaption class="ribbon"><span class="ribbon-content"><%= @user.username %></span></figcaption>
	</figure>
	
	

	<div id="rang"  >
		<% (@user.rank/10).times do %>
			<%= image_tag '/assets/images/icons/light-cupcake.svg'  %>
		<% end %>
		<p><%= pluralize(@user.rank, "point") %></p>
	</div>

	<h2>Recettes <small>(<%= pluralize(@user.recipes.count, "recette") %>)</small></h2>
		

		<%= render 'shared/recipes' , :recipes => @recipes %>
		<%= will_paginate @recipes , :class => "apple_pagination" %>

	



	<h2>Commentaires <small>(<%= pluralize(@user.comments.count, "commentaire") %>)</small></h2>
		

		<% begin %>

			<ul>
			<% @comments.each do |comment| %>
				<% begin %>
					<li>
						Ã  propos de <%= link_to comment.recipe.name, comment.recipe %> 
						le <time><%= comment.created_at.strftime("%d.%m.%y") %></time>
						<blockquote><strong><%= comment.title %></strong>
						<%= comment.content  %></blockquote>

					</li>
				<% rescue Exception => e %>
				<% end %>

			<% end %>
			</ul>
		
		<% rescue NoMethodError => e # In case of %>
			
		<% end %>





</section>



