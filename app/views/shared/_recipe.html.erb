<div class="recipe-thumbnail-container col-lg-3 col-md-4 col-sm-4 col-xs-12">
  <div class="thumbnail recipe">
    <%= image_tag(recipe.true_thumb_image_url , alt: "Thumb - #{recipe.name}", class: "img-responsive img-rounded") %>
    <div class="caption">
      <h3><%#= render 'recipes/allergens', recipe: recipe %><%= link_to recipe.pretty_name , recipe %></h3>
    </div>
  </div>
</div>