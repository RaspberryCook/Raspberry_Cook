<div class="col-md-12">

	<% comments.each do |comment| %>
		<%= render 'shared/comment', :comment => comment %>
	<% end %>

	<% if params[:controller] == 'recipes' and params[:action] == 'show' %>
		<div class="well">
			<h3>Ajoutez votre commentaire</h3>
			<%= render 'comments/form', :comment => @comment , :recipe_id => @recipe.id %>
		</div>
	<% end %>

</div>
