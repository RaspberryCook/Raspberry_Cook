<ul id="comments">


	<% if current_page?(:controller => 'recipes', :action => 'show') %>
		<li><%= render 'comments/form', :comment => @comment , :recipe_id => @recipe.id %></li>
	<% end %>

	
	

	<% comments.each do |comment| %>
		<li class="comment"><%= render 'shared/comment', :comment => comment %></li>
	<% end %>

</ul>