<h1>se connecter</h1>
<%= form_for(:session, :url => sessions_path) do |f| %>

    <%= f.label :email, "email" %>
    <%= f.text_field :email %><br />

    <%= f.label :password, "password" %>
    <%= f.password_field :password %><br />

    <%= f.submit "S'identifier" %>
<% end %>

<p>Pas encore inscrit ? <%= link_to "S'inscrire !", signup_path %></p>
