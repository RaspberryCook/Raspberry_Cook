<!DOCTYPE html>
<html>

<head><%= render 'layouts/head' %></head>
<body>

	<% if Rails.env.development? %>
		<strong>current_user_session</strong>
		<pre><%= current_user_session %></pre>
		<% if current_user %>
			<strong>Unread comments</strong>
			<pre><% Comment.unread_by(current_user).each do |noti|%>
				<%= noti.inspect %>
			<%end%></pre>
		<% end %>

		<strong>Session recipe</strong>
		<pre><%= session['recipes_viewed'] %></pre>
	<% end %>


	<%= yield %>

	<header><%= render 'layouts/header' %></header>
	<footer><%= render 'layouts/footer' %></footer>
	

	<% flash.each do |key, value| %>
		<div class="flash_<%= key %>">
			<%= value.html_safe %>
		</div>
		<%= javascript_include_tag 'flash.js' %>

	<% end %> 


	<script src="//code.jquery.com/jquery-1.10.2.min.js"></script>
	<script src="//code.jquery.com/ui/1.11.4/jquery-ui.min.js"></script>
	<script type="text/javascript" src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

	<%= javascript_include_tag 'application' %>


	<!-- Google Analytic -->
	<script type="text/javascript">
		(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
		(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
		m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
		})(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

		ga('create', 'UA-81180155-1', 'auto');
		ga('send', 'pageview');
	</script>

	</body>
</html>
